@model Simple.MVC.Security.Data.SEConfiguracao
@{
    ViewBag.Title = "Editar Configuração";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.Nome)
    <div class="row">
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <h3>@Model.Nome</h3>
                    </div>
                    <div class="form-group">
                        <label>Nome de Exibição</label>
                        @Html.TextBoxFor(model => model.NomeExibicao, new { @class = "form-control", @autofocus = "", @required = ""})
                    </div>
                    <div class="form-group">
                        <label>Valor</label>
                        @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @autofocus = "", @required = ""})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group well">
                        <button type="submit" id="btnSubmit" class="btn btn-primary btn-sm ">Salvar</button>
                        <a href="@Url.Action("Indice")" class="btn btn-default btn-sm ">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
