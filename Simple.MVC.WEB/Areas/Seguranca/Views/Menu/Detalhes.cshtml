@model Simple.MVC.Security.Data.SEMenu
@{
    ViewBag.Title = "Detalhes Menu";
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>Nome:</dt>
                    <dd>&nbsp;@Model.Nome</dd>
                    <dt>ClasseIcone:</dt>
                    <dd>&nbsp;@Model.ClasseIcone</dd>
                    <dt>Descricao:</dt>
                    <dd>&nbsp;@Model.Descricao</dd>
                    <dt>Acao:</dt>
                    <dd>&nbsp;@Model.Acao</dd>
                    <dt>Controlador:</dt>
                    <dd>&nbsp;@Model.Controlador</dd>
                </dl>
                <h5>Grupo</h5>
                <dl class="dl-horizontal">
                    @foreach (var item in Model.SEMenuGrupo)
                    {
                        <dt>@item.SEGrupo.Origem:</dt>
                            <dd>&nbsp; @item.SEGrupo.Nome</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>