@model Simple.MVC.Security.Data.SEGrupo
@{
    ViewBag.Title = "Detalhes do Grupo";
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Nome:</dt>
                <dd>&nbsp;@Model.Nome</dd>
                <dt>Descrição:</dt>
                <dd>&nbsp;@Model.Descricao</dd>
            </dl>
            <h5>Papeis</h5>
            <dl class="dl-horizontal">
                @foreach (var item in Model.SEPapelGrupo)
                {
                    <dt>@item.SEPapel.SESistema.NomeExibicao:</dt>
                        <dd>&nbsp; @item.SEPapel.Nome</dd>
                }
            </dl>
            <h5>Pessoas</h5>
            <dl class="dl-horizontal">
                @foreach (var item in Model.SEGrupoUsuario)
                {
                    <dt>@item.SEUsuario.Login:</dt>
                        <dd>&nbsp; @item.Login</dd>
                }
            </dl>
        </div>
    </div>
</div>