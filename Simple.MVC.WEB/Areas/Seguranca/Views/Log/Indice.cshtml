@model IEnumerable<Simple.MVC.Security.Data.SELog>
@{
    ViewBag.Title = "Logs Gerais";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@RenderPage("~/Views/Shared/_filterIndex.cshtml")
<div class="panel panel-primary table-responsive">
    <table class="table table-hover">
        <thead class="tb-primary">
            <tr>
                <th>Momento
                </th>
                <th>Sistema
                </th>
                <th>Usuário
                </th>
                <th>Texto
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogData)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sistema)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td style="white-space:pre-line; max-width:400px; word-break:break-all;">
                        @item.Texto.Trim()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@RenderPage("~/Views/Shared/_paginate.cshtml")