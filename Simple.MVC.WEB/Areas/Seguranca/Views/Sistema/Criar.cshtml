@model Simple.MVC.Security.Data.SESistema
@{  ViewBag.Title = "Novo Sistema";}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
<script src="~/Content/fontawesome-iconpicker-1.0.0/dist/js/fontawesome-iconpicker.min.js"></script>
<link href="~/Content/fontawesome-iconpicker-1.0.0/dist/css/fontawesome-iconpicker.min.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control lenLimit", @required = "", @placeholder = "Nome", @maxlength = "64" })
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label>Nome de Exibição</label>
                @Html.TextBoxFor(model => model.NomeExibicao, new { @class = "form-control lenLimit", @required = "", @placeholder = "Descrição", @maxlength = "64" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label>Descrição</label>
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @required = "", @placeholder = "Descrição", @maxlength = "64" })
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label>ID</label>
                @Html.TextBoxFor(model => model.IdAplicacao, new { @class = "form-control", @placeholder = "Id aplicação", @maxlength = "64" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label>Caminho</label>
                @Html.TextBoxFor(model => model.Caminho, new { @class = "form-control", @required = "", @placeholder = "Caminho", @maxlength = "64" })
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group iconpicker-container">
                <label>Ícone</label>
                <div class="input-group iconpicker-container">
                    @Html.TextBoxFor(model => model.Icone, "", new { @class = "form-control icp icp-auto iconpicker-element iconpicker-input", @value = "fa-cog", @required = "", @maxlength = "25" })
                    <span class="input-group-addon"><a class="fa fa-archive"></a></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group well">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Indice")" class="btn btn-default">Voltar</a>
    </div>
}