@model IEnumerable<Simple.MVC.Security.Data.SESistema>
@{  ViewBag.Title = "Sistemas";}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
    <div class="pull-right novo-page-header">
        <a href="@Url.Action("Criar","Sistema")" title="Novo"><i class="fa fa-plus-circle fa-3x" title="" data-original-title="Novo"></i><span class="hide">Novo</span></a>
    </div>
</div>

@RenderPage("~/Views/Shared/_filterIndex.cshtml")
<div class="panel panel-primary table-responsive">
    <table class="table table-hover">
        <thead class="tb-primary">
            <tr>
                <th>Sistema</th>
                <th>Descrição</th>
                <th>Caminho</th>
                <th>ID</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Caminho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    <a class="btnModal" href="javascript:;" data-href="@Url.Action("Detalhes", "Sistema", new { id = item.Id, Area = "Seguranca" })" title="@item.Nome">
                        <i title="Visualizar" class="fa fa-search fa-lg"></i><span class="hide">Visualizar</span>
                    </a>
                    <a href="@Url.Action("Editar", "Sistema", new { id = item.Id, Area = "Seguranca" })">
                        <i title="Editar" class="fa fa-edit fa-lg"></i><span class="hide">Editar</span>
                    </a>
                    <a href="javascript:;" class="btnModal" data-href="@Url.Action("Excluir", "Sistema", new { id = item.Id, Area = "Seguranca" })">
                        <i title="Excluir" class="fa fa-times fa-lg icon-red"></i><span class="hide">Excluir</span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
@RenderPage("~/Views/Shared/_paginate.cshtml")