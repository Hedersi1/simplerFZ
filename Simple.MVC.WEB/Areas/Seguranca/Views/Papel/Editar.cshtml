@model Simple.MVC.Security.Data.SEPapel
@{ ViewBag.Title = "Editar Papel"; }
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(model => model.Nome,
                            new { @class = "form-control lenLimit", @required = "", @placeholder = "Nome", @maxlength = "64" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Descrição</label>
                @Html.TextBoxFor(model => model.Descricao,
                            new { @class = "form-control lenLimit", @required = "", @placeholder = "Descrição", @maxlength = "64" })
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Sistema</label>
                @Html.DropDownList("IdSistema", null, "Selecione...", new { @required = "", @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group well">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Indice")" class="btn btn-default">Voltar</a>
    </div>
}
