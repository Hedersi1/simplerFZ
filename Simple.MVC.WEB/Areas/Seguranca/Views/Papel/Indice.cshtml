@model IEnumerable<Simple.MVC.Security.Data.SEPapel>
@{ ViewBag.Title = "Papeis"; }
<div class="page-header">
    <h1>@ViewBag.Title</h1>
    <div class="pull-right novo-page-header">
        <a href="@Url.Action("Criar","Papel")" title="Novo Papel"><i class="fa fa-plus-circle fa-3x" title="" data-original-title="Novo Papel"></i><span class="hide">Novo</span></a>
    </div>
</div>
@RenderPage("~/Views/Shared/_filterIndex.cshtml")
<div class="panel panel-primary table-responsive">
<table class="table table-hover">
    <thead class="tb-primary">

    <tr>
        <th>
            Nome
        </th>
        <th>
           Descrição
        </th>
        <th>
            Sistema
        </th>
        <th class="text-center col-md-2">Ações</th>
    </tr>
        <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SESistema.NomeExibicao)
        </td>

        <td class="text-center">
            <a class="btnModal"  href="javascript:;" data-href="@Url.Action("Detalhes", "Papel", new { id=item.Id })"> <i title="Visualizar" class="fa fa-search fa-lg"></i><span class="hide">Visualizar</span></a> | 
            <a href="@Url.Action("Editar", "Papel", new { id=item.Id })"> <i title="Editar" class="fa fa-edit fa-lg"></i><span class="hide">Editar</span></a> |
            <a class="btnModal" href="javascript:;" data-href="@Url.Action("Excluir","Papel", new { id=item.Id })"><i title="Excluir" class="fa fa-times fa-lg icon-red"></i><span class="hide">Excluir</span></a>
        </td>
    </tr>
}
            </tbody>
</table>
    </div>
@RenderPage("~/Views/Shared/_paginate.cshtml")