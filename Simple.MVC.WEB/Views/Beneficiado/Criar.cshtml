@model Simple.MVC.Business.FZ.Beneficiado
@using Simple.MVC.Business.Util;
@{ 
    ViewBag.Title = "Criar - Beneficiado";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary("Validação", new { @class="alert alert-danger summary" })

    <div class="row">
        <div class="col-sm-8 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.NomeResponsavel)*
                @Html.EditorFor(model => model.NomeResponsavel, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.CPF)
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Endereco)*
                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Complemento)
                @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-sm-3 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Numero)*
                @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-sm-3 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Bairro)*
                @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.IdSituacaoBeneficiado)*
                @Html.DropDownListFor(model => model.IdSituacaoBeneficiado, new SelectList(ViewBag.IdSituacaoBeneficiado, "Id", "Descricao", Model.IdSituacaoBeneficiado), "Selecione... ", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group well">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Indice")" class="btn btn-default">Voltar</a>
    </div>
}

@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        bindSelect();
        $("#CPF").mask("999.999.999-99");
    });
</script>   
}

