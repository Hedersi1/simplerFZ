@model Simple.MVC.Business.FZ.Beneficio
@using Simple.MVC.Business.Util;
@{ 
    ViewBag.Title = "Criar - Benefício";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary("Validação", new { @class="alert alert-danger summary" })

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Descricao)*
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Valor)*
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
    </div>
    <div class="form-group well">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Indice")" class="btn btn-default">Voltar</a>
    </div>
}

@section scripts{}

