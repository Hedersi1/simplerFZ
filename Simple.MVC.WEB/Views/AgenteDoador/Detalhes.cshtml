@model Simple.MVC.Business.Seguranca.Pessoa
@using Simple.MVC.Business.Util;

@{
    ViewBag.Title = "Detalhes - Pessoa";
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Id:</dt>
                <dd>&nbsp;@Model.Id</dd>
                <dt>Nome:</dt>
                <dd>&nbsp;@Model.Nome</dd>
                <dt>E-mail:</dt>
                <dd>&nbsp;@Model.Email</dd>
                <dt>Status:</dt>
                <dd>&nbsp;@Model.ssoaStatus.Descricao</dd>
                <dt>Usuario:</dt>
                <dd>&nbsp;@Model.Usuario.Guid</dd>
                <dt>Cidade:</dt>
                <dd>&nbsp;@Model.dade.Nome</dd>
                <dt>Endereço:</dt>
                <dd>&nbsp;@Model.Endereco</dd>
                <dt>Complemento:</dt>
                <dd>&nbsp;@Model.Complemento</dd>
                <dt>Número:</dt>
                <dd>&nbsp;@Model.Numero</dd>
                <dt>Bairro:</dt>
                <dd>&nbsp;@Model.Bairro</dd>
                <dt>LatLng:</dt>
                <dd>&nbsp;@Model.LatLng</dd>
            </dl>
        </div>
    </div>
</div>

