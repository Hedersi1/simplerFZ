@model Simple.MVC.Security.LocalPasswordModel

@{
    ViewBag.Title = "MudarSenha";
}

<div class="page-header">
    <h1>Alterar Senha</h1>

</div>


@using (Html.BeginForm("MudarSenha", "Account"))
{

    <div class="row form-group">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.OldPassword, "Senha atual", new { required = "required" })
            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", @required = "true", @autofocus = "true" })
        </div>
    </div>


    <div class="row form-group">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.NewPassword, "Nova senha", new { required = "required" })
            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @required = "true" })
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.ConfirmPassword, "Repetir Nova Senha", new { required = "required" })
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @required = "true" })

        </div>
    </div>

    <div class="row form-group well">
        <div class="col-lg-4">
            <button type="submit" class="btn btn-primary">Enviar</button>
            <a class="btn btn-default" title="Voltar" href="@Url.Action("Indice","Inicio")">Voltar</a>
        </div>
    </div>
}
<script type="text/javascript">
    $('#wrapper').addClass("toggled");
    $('#menu-toggle').hide();
</script>