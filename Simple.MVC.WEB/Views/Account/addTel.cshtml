@model Simple.MVC.Security.Data.CGTelefone

@{
    ViewBag.Title = "Adicionar Telefone";
    Layout = null;
    <script src="jquery.js" type="text/javascript"></script>
    <script src="jquery.maskedinput.js" type="text/javascript"></script>    
}

@using (Html.BeginForm("addTel", "Account", FormMethod.Post, new { id = "telefoneForm" }))
{
    @Html.Hidden("Id", Model.IdPessoa)
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label>DDD</label>
                            @Html.TextBoxFor(model => model.DDD, new { @class = "form-control ddd", @required = "", @maxlength = "2" })
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-group">
                            <label>Número</label>
                            @Html.TextBoxFor(model => model.Numero, new { @class = "form-control telefone", @required = "", @maxlength = "15" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </div>
    </div>
}

