@model Simple.MVC.Business.FZ.Patrocinador
@using Simple.MVC.Business.Util;
@{ 
    ViewBag.Title = "Criar - Patrocinador";
}
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm("Criar", "Patrocinador", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary("Validação", new { @class="alert alert-danger summary" })

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Nome)*
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Logomarca)*
                @Html.EditorFor(model => model.Logomarca, new { htmlAttributes = new { @class = "form-control", type ="file"} })
            </div>
        </div>
    </div>
    <div class="form-group well">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Indice")" class="btn btn-default">Voltar</a>
    </div>
}

@section scripts{}

